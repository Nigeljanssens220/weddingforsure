model Rsvp {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  nameA String
  nameB String? 

  emailA String @unique
  emailB String? @unique

  dietaryRestrictionsA String?
  dietaryRestrictionsB String?

  rsvpOptions String
  rsvpOptionsOther String?

  @@index([id])
  @@index([emailA])
}